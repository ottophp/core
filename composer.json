{
    "name": "ottophp/core",
    "autoload": {
        "psr-4": {
            "Otto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otto\\": "./tests/",
            "FakeProject\\": "./tests/fake-project/src"
        }
    },
    "require": {
        "php": "^8.1",
        "capsule/di": "^3.0",
        "payload-interop/payload-interop": "^1.0",
        "pmjones/auto-route": "2.x@dev",
        "pmjones/throwable-properties": "^1.0",
        "qiq/qiq": "2.x@dev",
        "qiq/helper-sapien": "2.x@dev",
        "sapien/sapien": "^1.0"
    },
    "require-dev": {
        "pds/skeleton": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "check": "composer cs-fix && composer test",
        "cs-fix": "./vendor/bin/phpstan analyze -c phpstan.neon src",
        "test": "./vendor/bin/phpunit"
    }
}
