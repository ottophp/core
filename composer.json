{
    "name": "ottophp/core",
    "autoload": {
        "psr-4": {
            "Otto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otto\\": "./tests/",
            "FakeProject\\": "./tests/fake-project/src"
        }
    },
    "require": {
        "capsule/di": "^3.0",
        "payload-interop/payload-interop": "^1.0",
        "pmjones/auto-route": "2.x@dev",
        "pmjones/throwable-properties": "^1.0",
        "qiq/qiq": "1.x-stan-poc-dev",
        "qiq/helper-sapien": "1.x-stan-poc-dev",
        "sapien/sapien": "^1.0"
    },
    "require-dev": {
        "pds/skeleton": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cs-fix": "./vendor/bin/phpstan analyze -c phpstan.neon src",
        "check": "composer test && composer cs-fix"
    }
}
